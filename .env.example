# ============================================
# CLIENT DIGITAL MENU - Environment Variables
# ============================================
# Copy this file to .env.development and fill in your values
# For production: Copy to .env.production with production values
# ============================================

# =======================
# Application Settings
# =======================
VITE_APP_NAME="Client Digital Menu"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Digital Menu System"
VITE_APP_MODE=development # development | production | staging

# =======================
# API Configuration
# =======================
VITE_API_BASE_URL=https://vuefront.mebrejderma.com/api
# OR for local: http://localhost:3000/api
VITE_API_TIMEOUT=10000 # milliseconds

# =======================
# Authentication (if needed later)
# =======================
# VITE_AUTH_TOKEN_KEY=digital_menu_token
# VITE_REFRESH_TOKEN_KEY=digital_menu_refresh_token
# VITE_TOKEN_EXPIRY=86400 # 24 hours in seconds

# =======================
# Feature Flags (if needed)
# =======================
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_DEBUG_MODE=true
# VITE_ENABLE_MOCK_API=true # Set to false in production

# =======================
# UI/UX Settings
# =======================
# VITE_DEFAULT_LOCALE=en
# VITE_DEFAULT_THEME=light
# VITE_ITEMS_PER_PAGE=10

# =======================
# External Services (add as needed)
# =======================
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here
# VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
# VITE_SENTRY_DSN=your_sentry_dsn_url

# =======================
# Development Only
# =======================
# VITE_SHOW_DEV_TOOLS=true